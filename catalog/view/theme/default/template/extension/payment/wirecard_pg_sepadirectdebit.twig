<fieldset id="payment">
    <legend>{{ sepa_legend }}</legend>
    <div class="alert alert-danger alert-dismissible hidden">
        <i class="fa fa-exclamation-circle"></i><span id="error-text-sepa"></span>
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
    </div>
    <div class="form-group required">
        <label class="col-sm-2 control-label col-form-label text-right" for="sepa-first-name">{{ first_name_input }}:</label>
        <div class="col-sm-10">
            <input id="sepa-first-name" class="form-control" placeholder="{{ first_name_input }}" type="text" name="first_name" autocomplete="false" form="wirecard-pg-form">
        </div>
    </div>
    <div class="form-group required">
        <label class="col-sm-2 control-label col-form-label text-right" for="sepa-last-name">{{ last_name_input }}:</label>
        <div class="col-sm-10">
            <input id="sepa-last-name" class="form-control" placeholder="{{ last_name_input }}" type="text" name="last_name" autocomplete="false" form="wirecard-pg-form">
        </div>
    </div>
    <div class="form-group required">
        <label class="col-sm-2 control-label col-form-label text-right" for="sepa-iban">{{ iban_input }}:</label>
        <div class="col-sm-10">
            <input id="sepa-iban" class="form-control" placeholder="{{ iban_input }}" type="text" name="iban" autocomplete="false" form="wirecard-pg-form">
        </div>
    </div>
    <input id="mandate_confirmed" class="form-control" value="0" type="hidden" name="mandate_confirmed" form="wirecard-pg-form">
    <input id="mandate_id" class="form-control" type="hidden" name="mandate_id" form="wirecard-pg-form" value="{{ mandate_id }}">
    {% if show_bic %}
        <div class="form-group required">
            <label class="col-sm-2 control-label col-form-label text-right" for="sepa-bic">{{ bic_input }}:</label>
            <div class="col-sm-10">
                <input id="sepa-bic" class="form-control" placeholder="{{ bic_input }}" type="text" name="bic" autocomplete="false" form="wirecard-pg-form">
            </div>
        </div>
    {% endif %}
</fieldset>
<div id="mandate-popup"></div>
<script src="catalog/view/javascript/wirecard_pg_sepadirectdebit.js" type="text/javascript"></script>
