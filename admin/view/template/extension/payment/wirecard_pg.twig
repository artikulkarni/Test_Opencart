{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid"> {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>{{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-status">{{ config_status }}</label>
                        <div class="col-sm-10">
                            <select name="{{ prefix ~ 'status' }}" id="input-status" class="form-control">

                                {% if status %}

                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>

                                {% else %}

                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>

                                {% endif %}

                            </select>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-10 description">
                                <i>{{ config_status_desc }}</i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-merchant-account-id">{{ config_merchant_account_id }}</label>
                        <div class="col-sm-10">
                            <input
                                    name="{{ prefix ~ 'merchant_account_id' }}"
                                    id="input-merchant-account-id"
                                    class="form-control"
                                    type="text"
                                    value="{{ merchant_account_id }}">
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-10 description">
                                <i>{{ config_merchant_account_id_desc }}</i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-merchant-secret">{{ config_merchant_secret }}</label>
                        <div class="col-sm-10">
                            <input
                                    name="{{ prefix ~ 'merchant_secret' }}"
                                    id="input-merchant-secret"
                                    class="form-control"
                                    type="text"
                                    value="{{ merchant_secret }}">
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-10 description">
                                <i>{{ config_merchant_secret_desc }}</i>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <h3 class="panel-title"><b>{{ text_credentials }}</b></h3>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-base-url">{{ config_base_url }}</label>
                        <div class="col-sm-10">
                            <input
                                    name="{{ prefix ~ 'base_url' }}"
                                    id="input-base-url"
                                    class="form-control"
                                    type="text"
                                    value="{{ base_url }}">
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-10 description">
                                <i>{{ config_base_url_desc }}</i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-http-user">{{ config_http_user }}</label>
                        <div>{{ input[prefix ~ 'http_user'] }}</div>
                        <div class="col-sm-10">
                            <input
                                    name="{{ prefix ~ 'http_user' }}"
                                    id="input-http-user"
                                    class="form-control"
                                    type="text"
                                    value="{{ http_user }}">
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-10 description">
                                <i>{{ config_http_user_desc }}</i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-http-password">{{ config_http_password }}</label>
                        <div class="col-sm-10">
                            <input
                                    name="{{ prefix ~ 'http_password' }}"
                                    id="input-http-password"
                                    class="form-control"
                                    type="text"
                                    value="{{ http_password }}">
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-10 description">
                                <i>{{ config_http_password_desc }}</i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <button
                                    name="test_credentials"
                                    id="input-test-credentials"
                                    class="btn"
                                    type="button"
                            >
                                {{ test_credentials }}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}

<script type="text/javascript">
    $(document).on('click', '#input-test-credentials', function() {
        var base_url  = $( '#input-base-url' ).val();
        var http_user = $( '#input-http-user' ).val();
        var http_pass = $( '#input-http-password' ).val();

        $.ajax(
            {
                type: 'POST',
                url: 'index.php?route=extension/payment/wirecard_pg_{{ type }}/testConfig&user_token={{ user_token }}',
                data: { 'base_url' : base_url, 'http_user' : http_user, 'http_pass' : http_pass },
                dataType: 'json',
                success: function (json) {
                    alert(json.configMessage);
                }
            }
        );
    });
</script>