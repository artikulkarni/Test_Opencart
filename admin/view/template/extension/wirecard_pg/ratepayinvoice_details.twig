{% if transaction.operations %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ text_backend_operations }}</h3>
    </div>
    <div class="panel-group">
        <br>
        <form action="{{ transaction.action }}" method="post" enctype="multipart/form-data" id="wirecard-operation"
              class="form-horizontal">
            <label for="amount">{{ text_request_amount }} in {{ transaction.currency }}</label>&nbsp;<input
                    type="number" name="amount" value="{{ transaction.amount }}" id="amount" class="input-sm" step="any"
                    min="0.000001" max="{{ transaction.amount }}"> &nbsp;
            <input type="hidden" name="currency" value="{{ transaction.currency }}">
            {% for key,operation in transaction.operations %}
                {{ basket }}
                {% for item in basket %}
                    <table class="table table-hover">
                        <tbody>
                            {% for key, value in item %}
                                <tr>
                                    <td>{{ key }}</td>
                                    <td>{{ value }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endfor %}
                <button type="submit" form="wirecard-operation" data-toggle="tooltip" class="btn btn-primary"
                        name="operation" value="{{ operation.action }}">{{ operation.text }}</button>
            {% endfor %}
        </form>
    </div>
{% endif %}