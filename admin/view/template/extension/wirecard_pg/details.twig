{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-puzzle-piece"></i> {{ text_transaction }} {% if transaction %}{{ transaction.transaction_id }}{% endif %}
                </h3>
            </div>
            <div class="panel-body">
                {% if error %}
                {{ error }}
                {% endif %}
                {% if transaction %}
                    {% if transaction.operations %}
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ text_backend_operations }}</h3>
                    </div>
                    <div class="panel-group">
                        <br>
                        {% for key,operation in transaction.operations %}
                            <a class="btn btn-primary" href="{{ operation.action }}">{{ operation.text }}</a>
                        {% endfor %}
                    </div>
                    {% endif %}
                <div class="panel-heading">
                    <h3 class="panel-title">{{ text_response_data }}</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tbody>
                        {% for key, value in transaction.response %}
                            <tr>
                                <td>{{ key }}</td>
                                <td>{{ value }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{{ footer }}