{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                {{ plugin_name }}&nbsp;{{ plugin_version }}
            </div>
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-envelope-o"></i> Support Email
                </h3>
            </div>
            <div class="panel-body">
                <div class="panel-group">
                    <form class="form-horizontal">
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="email_to">{{ config_email }}</label>
                            <div class="col-sm-10">
                                <input id="email_to" type="email" class="form-control" name="email" />
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="support_message">{{ config_message }}</label>
                            <div class="col-sm-10">
                                <textarea id="support_message" name="message" rows="12"  class="form-control"></textarea>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>